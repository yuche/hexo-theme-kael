                            <a class="mp-back" href="#">back</a>
                        </div>
                    </li>
                    <% } %>
                    <li class="mp-pjax"><a class="fa fa-user" href="<%= config.root %>about">&nbsp;&nbsp;&nbsp;About me</a></li>
                    <li><a class="fa fa-github" href="#">&nbsp;&nbsp;&nbsp;Github</a></li>

                </ul>

            </div>
        </nav>
        <div id="pjax">
            <div class="pjax-hidden" style="display: none">
                <% site.posts.sort('date', -1).each(function(post){ %>
                    <a  data-pjax href="<%= config.root %><%= post.path %>"><%= post.title %></a>
                <% }); %>
                <% site.categories.sort('name').each(function(item){ %>
                    <a data-pjax href="<%- config.root %><%- item.path %>">&nbsp;&nbsp;<%= item.name %></a>
                <% }); %>
                <% site.tags.sort('name').each(function(item){ %>
                    <a data-pjax href="<%- config.root %><%- item.path %>">&nbsp;&nbsp;<%= item.name %></a>
                <% }); %>
